<div class = "employee-slide-container font-style">
  <div class = "employee-outerslide"> </div>
  <div class = "employee-slide">
    <div class = "header slideheader">
      <div class="slide-headertext">{{slidetitle}}</div>
      <div class="employee-slide-btns">
       
        {{#each form-btns as |btn|}}
        <button class="{{btn.classname}}" 
          type ="{{btn.type}}" 
           {{action (action 'buttonAction' btn.actionName)}}
        >{{btn.title}}</button>
       {{/each}}
      </div>
    </div>
    <div class="horizontal-divider"></div>
    {{yield }}
  </div>
</div>
