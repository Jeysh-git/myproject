               </svg>
            </dd.toggle>
               {{#dd.menu as |ddm|}}
                  {{#each teams as |teamli|}}
                     {{#ddm.item}}
                        <a href {{ action "sortBy" "first_name:asc" }}>
                        {{teamli}}
                        </a>
                     {{/ddm.item}}
                  {{/each}}
               {{/dd.menu}}
         </BsDropdown>
   </div>
   <div class="content-container">
      {{#each teamsl as |avatar|}}
         {{user-card firstname = avatar.first_name lastname = avatar.last_name email = avatar.email image = avatar.image}}
      {{/each}}
   </div>
</div>
